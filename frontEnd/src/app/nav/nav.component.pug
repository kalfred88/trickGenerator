// Button trigger modal
// Modal
#loginModal.modal.fade(tabindex="-1" role="dialog" aria-labelledby="loginModalTitle" aria-hidden="true")
  .modal-dialog.modal-dialogd(role="document")
    .modal-content
      .modal-header
        //h5#loginModalTitle.modal-title Modal title
        ul.nav.nav-tabs(role="tablist")
          li.active(role="presentation")
            a(href="#loginTab" aria-controls="loginTab" role="tab" data-toggle="tab") Login
          li(role="presentation")
            a(href="#registerTab" aria-controls="registerTab" role="tab" data-toggle="tab") Register
        button.close(type="button" data-dismiss="modal" aria-label="Close")
          span(aria-hidden="true") Ã—
      .modal-body
        // Tab panes
        .tab-content
          //Login tab
          #loginTab.tab-pane.active(role="tabpanel")
            form
              .input-group.mb-3
                .input-group-prepend
                  span.input-group-text
                    i.fas.fa-user
                input#loginUsername.form-control(type="text", name="loginUsername", placeholder="Username", [(ngModel)]="user.username" required)
              //.input-group.mb-3
                .input-group-prepend
                  span.input-group-text
                    i.fas.fa-envelope
                input#loginEmail.form-control(type="email", aria-describedby="emailHelp", name="loginEmail", placeholder="Email", [(ngModel)]="user.email", required)
              .input-group.mb-3
                .input-group-prepend
                  span.input-group-text
                    i.fas.fa-key
                input#loginPassword.form-control(type="password", name="loginPassword", placeholder="Password", [(ngModel)]="user.password", required)
              button.btn.btn-primary(type="button", (click)="login()" , data-dismiss="modal") Login
          //Register tab
          #registerTab.tab-pane(role="tabpanel")
            form
              .input-group.mb-3
                .input-group-prepend
                  span.input-group-text
                    i.fas.fa-user
                input#registerUsername.form-control(type="text", name="registerUsername", placeholder="Username", [(ngModel)]="newUser.username", required)
              .input-group.mb-3
                .input-group-prepend
                  span.input-group-text
                    i.fas.fa-envelope
                input#registerEmail.form-control(type="email", name="registerEmail", aria-describedby="emailHelp", placeholder="Enter email", [(ngModel)]="newUser.email")
              .input-group.mb-3
                .input-group-prepend
                  span.input-group-text
                    i.fas.fa-key
                input#registerPasword.form-control(type="password", name="registerPasword", placeholder="Password",[(ngModel)]="newUser.password", required)
              button.btn.btn-primary(type="button", (click)="register()", data-dismiss="modal") Register
